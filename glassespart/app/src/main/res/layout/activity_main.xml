<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/recvMsgBtn"
        android:layout_width="194dp"
        android:layout_height="0dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="140dp"
        android:text="RecvMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disconnectBtn" />

    <Button
        android:id="@+id/sendMsgBtn"
        android:layout_width="194dp"
        android:layout_height="0dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="60dp"
        android:text="SendMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disconnectBtn" />

    <Button
        android:id="@+id/connectBtn"
        android:layout_width="185dp"
        android:layout_height="85dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="48dp"
        android:text="ConnectButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startBtn" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="184dp"
        android:layout_height="104dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="48dp"
        android:text="startBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/disconnectBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="68dp"
        android:text="disconnectBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectBtn" />

</android.support.constraint.ConstraintLayout>